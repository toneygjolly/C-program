#include<stdio.h>
int main(){
    int n1,n2,choice,result;
    printf("enter the two number\n");
    scanf("%d%d",&n1,&n2);
    printf("enter the option\n");
    printf("1.add\n2.sub\n3.mul\n4.div\n");
    scanf("%d",&choice);
    switch(choice){
    case 1:
      result=n1+n2;
      printf("result=%d",result);
      break;
    case 2:
      result=n1-n2;
      printf("result=%d",result);
      break;
    case 3:
      result=n1*n2;
      printf("result=%d",result);
      break;
    case 4:
      result=n1/n2;
      printf("result=%d",result);
      break;
    default:
      printf("fool");
    
}
}
